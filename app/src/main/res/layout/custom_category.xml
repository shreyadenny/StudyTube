<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_category_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:civ_border_color="@color/white_transparent_70"
        app:civ_border_width="@dimen/_1sdp"
        app:civ_circle_background_color="@color/white_transparent_80" />

    <TextView
        android:id="@+id/custom_category_name"
        style="@style/text_white_trans_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/custom_product_cart"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/add"
            />

        <ImageView
            android:id="@+id/custom_product_wishlist"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/wishlist" />

        <ImageView
            android:id="@+id/custom_product_wishlist_fill"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/wishlist_fill"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>